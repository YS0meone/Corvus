# ── LLM APIs ───────────────────────────────────────────────────────────────
OPENAI_API_KEY=your_openai_api_key_here        # required for embeddings
GEMINI_API_KEY=your_gemini_api_key_here        # required for Gemini models

# ── Model names (any model string accepted by LangChain's init_chat_model) ─
EMBEDDING_MODEL_NAME=text-embedding-3-small
SUPERVISOR_MODEL_NAME=google_genai:gemini-3-flash-preview
PF_AGENT_MODEL_NAME=google_genai:gemini-3-flash-preview
PF_FILTER_MODEL_NAME=google_genai:gemini-3-flash-preview
QA_AGENT_MODEL_NAME=google_genai:gemini-3-flash-preview
QA_EVALUATION_MODEL_NAME=google_genai:gemini-3-flash-preview
QA_EVALUATOR_MODEL_NAME=google_genai:gemini-3-pro-preview
QA_BASELINE_MODEL_NAME=google_genai:gemini-3-flash-preview

# ── LangSmith tracing (optional) ───────────────────────────────────────────
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langchain_api_key
LANGCHAIN_PROJECT=corvus
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ── External APIs ──────────────────────────────────────────────────────────
COHERE_API_KEY=your_cohere_api_key          # required for reranking
S2_API_KEY=your_semantic_scholar_api_key    # required for paper search

# ── Qdrant vector database ─────────────────────────────────────────────────
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=                             # leave blank for local
QDRANT_VECTOR_SIZE=1536
QDRANT_COLLECTION=papers
QDRANT_DISTANCE=COSINE

# ── Redis (Celery broker/backend) ──────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ── Paper processing ───────────────────────────────────────────────────────
PDF_DOWNLOAD_DIR=./papers
GROBID_SERVER_URL=http://localhost:8070

# ── Auth (optional — requires Clerk account) ───────────────────────────────
CLERK_JWKS_URL=                             # leave blank to disable auth
DISABLE_AUTH=false

# ── Logging ────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
