# ── LLM API ────────────────────────────────────────────────────────────────
OPENAI_API_KEY=your_openai_api_key_here

# ── Model names (any model string accepted by LangChain's init_chat_model) ─
EMBEDDING_MODEL_NAME=sentence-transformers/allenai-specter
SUPERVISOR_MODEL_NAME=gpt-4o-mini
PF_AGENT_MODEL_NAME=gpt-4o-mini
PF_FILTER_MODEL_NAME=gpt-4o-mini
QA_AGENT_MODEL_NAME=gpt-4o-mini
QA_EVALUATION_MODEL_NAME=gpt-4o-mini
QA_EVALUATOR_MODEL_NAME=gpt-4o-mini
QA_BASELINE_MODEL_NAME=gpt-4o-mini

# ── LangSmith tracing (optional) ───────────────────────────────────────────
LANGSMITH_TRACING_V2=false
LANGCHAIN_API_KEY=your_langchain_api_key
LANGCHAIN_PROJECT=ai-researcher-proto

# ── External APIs ──────────────────────────────────────────────────────────
COHERE_API_KEY=your_cohere_api_key          # required for reranking
S2_API_KEY=your_semantic_scholar_api_key    # required for paper search

# ── Qdrant vector database ─────────────────────────────────────────────────
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=                             # leave blank for local
QDRANT_VECTOR_SIZE=768
QDRANT_COLLECTION=papers
QDRANT_DISTANCE=COSINE

# ── Redis (Celery broker/backend) ──────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ── Paper processing ───────────────────────────────────────────────────────
PDF_DOWNLOAD_DIR=./papers
GROBID_SERVER_URL=http://localhost:8070

# ── Auth (optional — requires Clerk account) ───────────────────────────────
CLERK_JWKS_URL=                             # leave blank to disable auth
DISABLE_AUTH=false

# ── Logging ────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
